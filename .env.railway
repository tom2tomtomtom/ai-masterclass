# Railway Environment Variables Template
# Copy these to your Railway dashboard under Variables tab

# ===== SECURITY SECRETS =====
# Generate strong secrets (32+ characters)
JWT_SECRET=your-super-secure-jwt-secret-here-32-chars-minimum
SESSION_SECRET=your-super-secure-session-secret-here-32-chars-minimum

# ===== DATABASE CONFIGURATION =====
# Railway will provide these automatically when you add PostgreSQL service
DATABASE_URL=${{Postgres.DATABASE_URL}}
DB_HOST=${{Postgres.PGHOST}}
DB_PORT=${{Postgres.PGPORT}}
DB_DATABASE=${{Postgres.PGDATABASE}}
DB_USER=${{Postgres.PGUSER}}
DB_PASSWORD=${{Postgres.PGPASSWORD}}
DB_SSL=true

# ===== REDIS CONFIGURATION =====
# Railway will provide these automatically when you add Redis service
REDIS_URL=${{Redis.REDIS_URL}}

# ===== APPLICATION CONFIGURATION =====
NODE_ENV=production
PORT=${{PORT}}
API_VERSION=1.0.0

# ===== FRONTEND CONFIGURATION =====
FRONTEND_URL=${{RAILWAY_PUBLIC_DOMAIN}}
CORS_ORIGIN=${{RAILWAY_PUBLIC_DOMAIN}}
REACT_APP_API_URL=https://${{RAILWAY_PUBLIC_DOMAIN}}

# ===== RATE LIMITING =====
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
AUTH_RATE_LIMIT_MAX=10
AUTH_RATE_LIMIT_WINDOW_MS=900000

# ===== LOGGING =====
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_TRACKING=true

# ===== FEATURES =====
ENABLE_METRICS=true
ENABLE_CACHING=true
CACHE_TTL=3600

# ===== FILE UPLOADS =====
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# ===== SECURITY HEADERS =====
HELMET_CSP_ENABLE=true
HELMET_HSTS_ENABLE=true
HELMET_NOSNIFF_ENABLE=true

# ===== SESSION CONFIGURATION =====
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=strict
SESSION_MAX_AGE=86400000

# ===== OPTIONAL: EMAIL CONFIGURATION =====
# Uncomment and configure if you need email functionality
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# EMAIL_FROM=noreply@your-domain.com

# ===== OPTIONAL: AI API KEYS =====
# Uncomment and add if your app uses AI services
# OPENAI_API_KEY=your-openai-api-key
# CLAUDE_API_KEY=your-claude-api-key

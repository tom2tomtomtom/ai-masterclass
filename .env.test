# Test Environment - Use secure secrets even for testing
NODE_ENV=test
PORT=5001

# Database
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=ai_masterclass_test
DB_USER=test_user
DB_PASSWORD=test_password

# Security
JWT_SECRET=test-jwt-secret-minimum-32-characters-for-testing
SESSION_SECRET=test-session-secret-minimum-32-characters-for-testing

# URLs
FRONTEND_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:3000

# Supabase - Use test project credentials
SUPABASE_URL=https://your-test-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-test-service-role-key
SUPABASE_ANON_KEY=your-test-anon-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
AUTH_RATE_LIMIT_MAX=100
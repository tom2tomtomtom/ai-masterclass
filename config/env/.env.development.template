# Development Environment Configuration
# Copy this to .env.local and customize for your development setup

# Environment
NODE_ENV=development
PORT=8000

# Database - Local PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=ai_masterclass_dev
DB_USER=your_username
DB_PASSWORD=your_password
DB_SSL=false

# Security - Use strong secrets even in development
JWT_SECRET=dev-jwt-secret-change-this-to-minimum-32-chars
SESSION_SECRET=dev-session-secret-change-this-to-minimum-32-chars

# URLs
FRONTEND_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:3000

# Rate Limiting - Relaxed for development
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# Supabase - Development project
SUPABASE_URL=https://your-dev-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-dev-service-role-key
SUPABASE_ANON_KEY=your-dev-anon-key

# Frontend Variables
REACT_APP_SUPABASE_URL=https://your-dev-project.supabase.co
REACT_APP_SUPABASE_ANON_KEY=your-dev-anon-key
REACT_APP_API_URL=http://localhost:8000
REACT_APP_CLIENT_URL=http://localhost:3000
REACT_APP_LOG_LEVEL=DEBUG
REACT_APP_DEBUG=true
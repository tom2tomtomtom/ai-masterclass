# Test Environment Configuration
# Used for automated testing and CI/CD

# Environment
NODE_ENV=test
PORT=5001

# Database - Test database (separate from development)
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=ai_masterclass_test
DB_USER=test_user
DB_PASSWORD=test_password
DB_SSL=false

# Security - Test secrets (not for production)
JWT_SECRET=test-jwt-secret-for-automated-testing-only
SESSION_SECRET=test-session-secret-for-automated-testing-only

# URLs
FRONTEND_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:3000

# Rate Limiting - Disabled for testing
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
AUTH_RATE_LIMIT_MAX=100

# Supabase - Test project or mock
SUPABASE_URL=https://test-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=test-service-role-key
SUPABASE_ANON_KEY=test-anon-key

# Frontend Variables
REACT_APP_SUPABASE_URL=https://test-project.supabase.co
REACT_APP_SUPABASE_ANON_KEY=test-anon-key
REACT_APP_API_URL=http://localhost:5001
REACT_APP_CLIENT_URL=http://localhost:3000
REACT_APP_LOG_LEVEL=SILENT
REACT_APP_DEBUG=false

# Testing specific
JEST_TIMEOUT=30000
TEST_DB_RESET=true
MOCK_EXTERNAL_APIS=true